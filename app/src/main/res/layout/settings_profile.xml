<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name"
                android:layout_marginBottom="10dp"
                style="@style/TitleTextStyle">

            </TextView>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/firstNameTilProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <EditText
                    android:id="@+id/firstNameEtProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    style="@style/SubtitleTextStyle"
                    android:hint="John"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Name"
                android:layout_marginBottom="10dp"
                style="@style/TitleTextStyle">

            </TextView>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/lastNameTilProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <EditText
                    android:id="@+id/lastNameEtProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    style="@style/SubtitleTextStyle"
                    android:hint="Doe"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Gender"
                android:layout_marginBottom="10dp"
                style="@style/TitleTextStyle">

            </TextView>
            <Spinner
                android:id="@+id/planets_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Birthday"
                android:layout_marginBottom="10dp"
                style="@style/TitleTextStyle">

            </TextView>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/birthdayTilProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <EditText
                    android:id="@+id/birthdayEtProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    style="@style/SubtitleTextStyle"
                    android:hint="01/01/2001"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:layout_marginBottom="10dp"
                style="@style/TitleTextStyle">

            </TextView>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/emailTilProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <EditText
                    android:id="@+id/emailEtProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    style="@style/SubtitleTextStyle"
                    android:hint="johndoe@gmail.com"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:layout_marginBottom="10dp"
                style="@style/TitleTextStyle">

            </TextView>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/phoneTilProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <EditText
                    android:id="@+id/phoneEtProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    style="@style/SubtitleTextStyle"
                    android:hint="(307) 555-0133"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- PASSWORD-->
            <TextView
                android:id="@+id/oldPswdTilProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Old Password"
                android:layout_marginBottom="10dp"
                style="@style/TitleTextStyle">

            </TextView>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <EditText
                    android:id="@+id/oldPswdEtProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    style="@style/SubtitleTextStyle"
                    android:hint="Old password"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/newPswdTilProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Password"
                android:layout_marginBottom="10dp"
                style="@style/TitleTextStyle">

            </TextView>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <EditText
                    android:id="@+id/newPswdEtProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    style="@style/SubtitleTextStyle"
                    android:hint="New password"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/againPswdTilProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Password Again"
                android:layout_marginBottom="10dp"
                style="@style/TitleTextStyle">

            </TextView>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <EditText
                    android:id="@+id/againPswdEtProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    style="@style/SubtitleTextStyle"
                    android:hint="New password again"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

