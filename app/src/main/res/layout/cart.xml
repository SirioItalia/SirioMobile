<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:layout_marginBottom="80dp">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/cuponTilCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="6dp">

        <EditText
            android:id="@+id/cuponEtCart"
            style="@style/DefaultTextStyle"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edit_text"
            android:hint="Enter Cupon Code"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/applyBCart"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cuponTilCart"
        android:layout_alignRight="@+id/cuponTilCart"
        android:layout_alignBottom="@+id/cuponTilCart"
        android:text="Apply" />

    <Button
        android:id="@+id/checkBCart"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Check out"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>